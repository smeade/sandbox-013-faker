<div class="page-header">
  <%= link_to new_hacker_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Snooze
  <% end %>
  <h1>Hacker Snooze</h1>
</div>

<% unless @hackers.empty? %>
  <div class="panel panel-default panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @hackers.first.name %> author of <%= @hackers.first.app_name %> </h3>
    </div>
    <div class="panel-body">
      <blockquote>
        <%= @hackers.first.say_something_smart %>
      </blockquote>
    </div>
  </div>
<% end %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Known for</th>
        <th>Interesting quote</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @hackers) do |hacker| %>
            <td><%= hacker.name %></td>
            <td><%= hacker.app_name %></td>
            <td><%= hacker.say_something_smart %></td>
            <td><%= link_to 'Show', hacker %></td>
        <td><%= link_to 'Edit', edit_hacker_path(hacker) %></td>
        <td><%= link_to 'Destroy', hacker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
