<%= form_for(@product, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sku, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :sku, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price_cents, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :price_cents, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :active, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :available_on, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :available_on, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
